<?xml version="1.0"?>

<!DOCTYPE benchmark SYSTEM "benchmark.dtd" >

<benchmark>
  <measures>

    <euclideanNorm>
      <name>corners</name>
      <groundTruth type="cornersFromCamera">
	<camera>bowtech1</camera>
	<target>blackbox</target>
	<publishOn> autoInit</publishOn>
      </groundTruth>	
      <target> cornersTopic </target>
      <startOn>
	<type>onInit</type>
      </startOn>
      <stopOn>
	<type>never</type>
      </stopOn>
    </euclideanNorm>

    <euclideanNorm>
      <name>centroid</name>
      <groundTruth type="centroidFromCamera">
	<camera>bowtech1</camera>
	<target>blackbox</target>
      </groundTruth>	
      <target> centroidTopic </target>
      <startOn>
	<type>onInit</type>
      </startOn>
      <stopOn>
	<type>never</type>
      </stopOn>
    </euclideanNorm>

  </measures>

  <startOn>
     <type>service</type>
     <target> startBench </target>
  </startOn>

  <stopOn>
     <type>never</type>
  </stopOn> 
    
  <function publishResult="true">corners+centroid</function>

  <sceneUpdater> 
    <sceneFogUpdater>
      <initialFog>0</initialFog>
      <finalFog>2.0</finalFog>
      <step>0.05</step>
      <interval>5</interval>
    </sceneFogUpdater>
  </sceneUpdater>

</benchmark>
